{
  "name": "rucq-admin",
  "version": "0.6.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:staging": "vite --host 0.0.0.0 --mode staging",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",
    "format": "prettier --write src/",
    "generate:api": "npx openapi-typescript https://raw.githubusercontent.com/traPtitech/rucQ/main/openapi.yaml -o src/api/schema.d.ts && npm run format"
  },
  "dependencies": {
    "@date-fns/tz": "^1.2.0",
    "@types/markdown-it": "^14.1.2",
    "date-fns": "^4.1.0",
    "github-markdown-css": "^5.8.1",
    "highlight.js": "^11.11.1",
    "markdown-it": "^14.1.0",
    "marked": "^16.0.0",
    "openapi-fetch": "^0.14.0",
    "pinia": "^3.0.3",
    "sanitize-html": "^2.17.0",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "vuetify": "^3.9.2"
  },
  "devDependencies": {
    "@mdi/font": "^7.4.47",
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.13.9",
    "@types/sanitize-html": "^2.16.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.21.0",
    "eslint-plugin-oxlint": "^0.15.13",
    "eslint-plugin-vue": "~10.0.0",
    "jiti": "^2.4.2",
    "msw": "^2.9.0",
    "npm-run-all2": "^7.0.2",
    "openapi-msw": "^1.2.0",
    "openapi-typescript": "^7.6.1",
    "oxlint": "^0.15.13",
    "prettier": "3.5.3",
    "typescript": "~5.8.0",
    "vite": "^6.2.1",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vite-plugin-vuetify": "^2.1.1",
    "vue-tsc": "^2.2.8"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
